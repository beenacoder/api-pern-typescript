{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"],
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target":"ESNext"
    },
    "ts-node": {
        "esm": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./src/**/*.test.ts"]
}